{
  "name": "Docker in Docker",
  "dockerFile": "Dockerfile",
  "runArgs": ["--init"],
  "mounts": [
    {
      "source": "/var/run/docker.sock",
      "target": "/var/run/docker.sock",
      "type": "bind"
    }
  ],
  "features": {
    "docker-in-docker": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "vscode",
  "onCreateCommand": "start-docker-osx.sh"
}