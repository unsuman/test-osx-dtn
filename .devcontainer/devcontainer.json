{
  "name": "OSX docker",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--rm",
    "-p", "50922:10022",
    "--device=/dev/kvm",
    "--cap-add=NET_ADMIN",
    "--stop-timeout", "120",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
    "-e", "DISPLAY=${env:DISPLAY:-:0.0}",
    "-e", "SHORTNAME=catalina"
  ]
}