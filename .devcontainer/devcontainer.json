{
  "name": "Docker-in-Docker Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--privileged",
    "-v", "/var/run/docker.sock:/var/run/docker.sock"
  ],
  "remoteUser": "vscode",
  "postCreateCommand": "sudo chown vscode:vscode /var/run/docker.sock",
  "forwardPorts": [
    5900,
    10022
  ]
}